{
  "name": "crane-beta",
  "description": "Managing worksheets for therapists",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint": "^0.7.6",
    "@nuxt/test-utils": "^3.19.1",
    "@types/node": "^22.9.4",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.16.0",
    "happy-dom": "^17.5.6",
    "nuxt": "^3.14.1592",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4",
    "vue-tsc": "^2.2.10"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@pinia/nuxt": "^0.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.37.0",
    "jsonwebtoken": "^9.0.2",
    "pinia": "^2.3.0",
    "postgres": "^3.4.5",
    "resend": "^4.0.1",
    "twilio": "^5.3.6",
    "zod": "^3.24.1"
  }
}
